{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}


{% block content %}
	 {% if errorParticiper %}
		<div class="alert alert-success m-auto col-3">
			{{ sessionSuccess ~ '!' }}
		</div>
		{% endif %}
		{% if errorParticiper %}
		<div class="alert alert-warning m-auto mt-2 col-3">
			{{ logout }}
		</div>
		{% endif %}
    {% if sessionSuccess %}
		<div class="alert alert-success m-auto col-3">
			{{ sessionSuccess ~ '!' }}
		</div>
		{% endif %}
		{% if logout %}
		<div class="alert alert-warning m-auto mt-2 col-3">
			{{ logout }}
		</div>
		{% endif %}
		{% if connected %}
		<div class="alert alert-warning m-auto mt-2 col-6">
			{{  connected }}
		</div>
		{% endif %}
		<h1>Accueil PHP MVC</h1>

	{% for evenementAVenir in evenementsAVenir %}
		<div>
			<p>{{ evenementAVenir.idEvenement }}</p>
			<form method="POST" action="/evenement">
				<button type="submit" name="id" class="btn btn-warning" value="{{ evenementAVenir.idEvenement }}">Acceder</button>
			</form>
		</div>
	{% endfor %}
		<h3>Bienvenue sur notre projet PHP MVC from Scratch</h3>
{% endblock %}

