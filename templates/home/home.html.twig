{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}


{% block content %}
    {% if sessionSuccess %}
		<div class="alert alert-success m-auto col-3">
			{{sessionSuccess ~ '!'}}
		</div>
		{% endif %}
		{% if logout %}
		<div class="alert alert-warning m-auto mt-2 col-3">
			{{logout}}
		</div>
		{% endif %}
		{% if connected %}
		<div class="alert alert-warning m-auto mt-2 col-6">
			{{connected}}
		</div>
		{% endif %}
		<h1>Accueil PHP MVC</h1>

		<h3>Bienvenue sur notre projet PHP MVC from Scratch</h3>
{% endblock %}

