{% extends "base.html.twig" %}

{% block title %}Modifier l'école{% endblock %}


{% block content %}
    <h1 class="display-1 text-center mt-5">Modifier l'école</h1>
    <main>
        <form class="form-admin" method="POST" action="/admin/update/ecoles">
            <div class="form-group">
                <label for="nomEcole">Nom école</label>
                <input type="text" name="nomEcole" class="form-control" id="nomEcole" value="{{ ecole.nomEcole }}" placeholder="Nom de l'école">
            </div>
            <button type="submit" name="id" class="btn btn-primary" value="{{ ecole.idEcole }}">Sauvegarder</button>
            <a href="/admin/ecoles" class="btn btn-primary">Annuler</a>
        </form>
    </main>
{% endblock %}
