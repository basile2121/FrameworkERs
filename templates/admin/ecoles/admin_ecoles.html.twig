{% extends "base.html.twig" %}

{% block title %}Gestions des écoles{% endblock %}


{% block content %}
    <h1 class="display-1 text-center mt-5">Ecoles</h1>
    <main>
     <a href="/admin/create/ecoles" class="btn btn-primary">Ajouter une école</a>
        <form class="form-admin" method="GET" action="/admin/ecoles/filter">
            <div class="form-group">
                <label for="filtre_name_ecole">Rechercher une école par nom</label>
                <input type="text" maxlength="255" value="{{ filtres['filtre_name_ecole'] }}" name="filtre_name_ecole" class="form-control" id="filtre_name_ecole" placeholder="Nom de l'école">
            </div>
            <button type="submit" name="filtre" value="true" class="btn btn-primary">Rechercher</button>
            <a href="/admin/ecoles" class="btn btn-primary">Annuler</a>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom école</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ecole in ecoles %}
                <tr>
                    <th scope="row">{{ ecole.nomEcole }}</th>
                    <td>
                        <a class="btn btn-warning" href="{{ '/admin/edit/ecoles?id=' ~ ecole.idEcole }}">Modifier</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{ecole.idEcole }}">Supprimer</button>
                    </td>
                </tr>
                
                {% include 'utils/pop-up/delete_ecole_model.html.twig'%}
            {% endfor %}
             {% include 'utils/pop-up/delete_ecole_withcontraint_model.html.twig'%}
            </tbody>
            <tfoot>
                <tr>
                    {% if ecoles is not empty %}
                        <th>Total écoles : {{ ecoles | length }}</th>
                    {% else %}
                        <th>Aucune écoles</th>
                    {% endif %}
                </tr>
            </tfoot>
        </table>
    </main>

    {% if impossible == "impossible"  %}
            <script type="text/javascript">
                $('#deleteModalwithcontraintecole').modal("show")
            </script>
        {% endif %}

{% endblock %}
