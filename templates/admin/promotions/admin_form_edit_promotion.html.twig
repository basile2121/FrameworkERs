{% extends "base.html.twig" %}

{% block title %}Modifier la promotion{% endblock %}


{% block content %}
    <h1 class="display-1 text-center mt-5">Modifier la promotion</h1>
    <main>
        <form class="form-admin" method="POST" action="/admin/update/promotions">
            <div class="form-group">
                <label for="libellePromotion">Nom promotion</label>
                <input type="text" name="libellePromotion" class="form-control" id="libellePromotion" value="{{ promotion.libellePromotion }}" placeholder="Nom de la promotion">
            </div>
             <div class="form-group">
                <label for="idEcole">Nom école</label>
                <select name="idEcole" id="idEcole">
                       {% for ecole in ecoles %}
                        {% if promotion.idEcole == ecole.idEcole %}
                            <option selected value="{{ promotion.idEcole }}">{{ ecole.nomEcole }}</option>
                        {% else %}
                            <option value="{{ ecole.idEcole }}">{{ ecole.nomEcole }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
             <a href="/admin/create/ecoles" class="btn btn-success">Créer une école</a>
            <button type="submit" name="id" class="btn btn-primary" value="{{ promotion.idPromotion }}">Sauvegarder</button>
            <a href="/admin/promotions" class="btn btn-primary">Annuler</a>
        </form>
    </main>
{% endblock %}
