{% extends "base.html.twig" %}

{% block title %}Gestions des adresses{% endblock %}


{% block content %}
    <h1 class="display-1 text-center mt-5">Adresses</h1>
    <main>
        <a href="/admin/create/adresse">Ajouter une adresse</a>
        <form class="form-admin" method="GET" action="/admin/adresses/filter">
            <div class="form-group">
                <label for="filter_city">Rechercher une adresse par sa ville</label>
                <input type="text" maxlength="255" value="{{ filtres['filter_city'] }}" name="filter_city" class="form-control" id="filter_city" placeholder="Nom de la ville">
            </div>
            <div class="form-group">
                <label for="filter_cp">Rechercher une adresse par son code postal</label>
                <input type="text" minlength="5" maxlength="5" pattern="[0-9]+" value="{{ filtres['filter_cp'] }}" name="filter_cp" class="form-control" id="filter_cp" placeholder="Le code postal doit faire 5 caractÃ¨res (uniquement des chiffres)">
            </div>
            <button type="submit" name="filtre" value="true" class="btn btn-primary">Rechercher</button>
            <a href="/admin/adresses" class="btn btn-primary">Annuler</a>
        </form>

        <h2>Liste des adresses</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Code postal</th>
                <th scope="col">Ville</th>
                <th scope="col">Adresse</th>
                <th scope="col">Longitude</th>
                <th scope="col">Latitude</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for adresse in adresses %}
                <tr>
                    <th scope="row">{{ adresse.cpVille }}</th>
                    <td>{{ adresse.villeLibelle }}</td>
                    <td>{{ adresse.libelleAdresse }}</td>
                    <td>{{ adresse.coordonneeLongitude }}</td>
                    <td>{{ adresse.coordonneLatitude }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ '/admin/edit/adresses?id=' ~ adresse.idAdresse }}">Modifier</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal{{adresse.idAdresse  }}">Supprimer</button>
                    </td>
                </tr>
                {% include 'utils/pop-up/delete_adresse_model.html.twig'%}
            {% endfor %}
            </tbody>
                {% include 'utils/pop-up/delete_adresse_withcontraint_model.html.twig'%}

            <tfoot>
                <tr>
                    {% if adresses is not empty %}
                        <th>Total adresses {{ adresses | length }}</th>
                    {% else %}
                        <th>Aucune adresse</th>
                    {% endif %}
                </tr>
            </tfoot>
        </table>
    </main>

          {% if Adressepop == "Adressepop"  %}
            <script type="text/javascript">
                $('#deleteModalwithcontraintadres').modal("show")
            </script>
        {% endif %}
{% endblock %}
