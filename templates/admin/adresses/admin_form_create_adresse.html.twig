{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/admin.css"/>
{% endblock %}

{% block title %}Ajouter une adresse{% endblock %}


{% block content %}
    <h1 class="text-center mt-5">Ajouter une adresse</h1>
    <main>
        <section class="card event col-5 m-auto">
            <form class="form-admin" method="POST" action="/admin/add/adresses">
                <div id="createEvent">
                    <div class="form-group">
                        <label for="adresse">Adresse</label>
                        <input type="text" maxlength="255" name="adresse" class="form-control" id="adresse"
                               placeholder="Adresse" required>
                    </div>
                    <div class="form-group">
                        <label for="ville">Ville</label>
                        <input type="text" maxlength="255" name="ville" class="form-control" id="ville"
                               placeholder="Nom de la ville" required>
                    </div>
                    <div class="form-group">
                        <label for="codePostal">Code postal</label>
                        <input type="text" minlength="5" maxlength="5" pattern="[0-9]+" name="codePostal"
                               class="form-control" id="codePostal"
                               placeholder="Le code postal doit faire 5 caractÃ¨res (uniquement des chiffres)" required>
                    </div>
                    <input type="hidden" name="redirect_create_adresse_url" class="form-control"
                           id="redirect_create_adresse_url" value="{{ urlRedirection }}">
                </div>
                <div id="bouton">
                    <button type="submit" name="id" class="btn btn-success mt-3">Ajouter</button>
                    <a href="/admin/adresses" class="btn btn-danger mt-3">Retour</a>
                </div>
            </form>
        </section>
    </main>
{% endblock %}
