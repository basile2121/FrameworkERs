{% extends "base.html.twig" %}
{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="/css/admin.css"/>

{% endblock %}
{% block title %}Ajouter une adresse
{% endblock %}


{% block content %}
	<h1 class="text-center mt-5">Ajouter une adresse</h1>
	<main>
		<section class="card event col-5 m-auto">
			<form class="form-admin" method="POST" action="/admin/add/adresses">
				<div id="createEvent">
					<div class="form-group">
						<label for="adresse">Adresse</label>
						<input type="text" name="adresse" class="form-control" id="adresse" placeholder="Adresse">
					</div>
					<div class="form-group">
						<label for="ville">Ville</label>
						<input type="text" name="ville" class="form-control" id="ville" placeholder="Nom de la ville">
					</div>
					<div class="form-group">
						<label for="codePostal">Code postal</label>
						<input type="text" name="codePostal" class="form-control" id="codePostal" placeholder="Code postal">
					</div>
					<input type="hidden" name="redirect_create_adresse_url" class="form-control" id="redirect_create_adresse_url" value="{{ urlRedirection }}">
				</div>
				<div id="bouton">
					<button type="submit" name="id" class="btn btn-success mt-3">Ajouter</button>
					<a href="/admin/adresses" class="btn btn-danger mt-3">Retour</a>
				</div>
			</form>
		</section>
	</main>
{% endblock %}
