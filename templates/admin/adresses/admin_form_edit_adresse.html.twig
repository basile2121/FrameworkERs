{% extends "base.html.twig" %}
{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="/css/admin.css"/>

{% endblock %}
{% block title %}Modifier une adresse{% endblock %}


{% block content %}
    <h1 class="text-center mt-5">Modifier une adresse</h1>
    <main>
    <section class="card event col-5 m-auto">
        <form class="form-admin" method="POST" action="/admin/update/adresses">
        <div id="createEvent">
            <div class="form-group">
                <label for="ville">Ville</label>
                <input type="text" name="ville" class="form-control" id="ville" value="{{ adresse.villeLibelle }}" placeholder="Nom de la ville">
            </div>
            <div class="form-group">
                <label for="codePostal">Code postal</label>
                <input type="text" name="codePostal" class="form-control" id="codePostal" value="{{ adresse.cpVille }}" placeholder="Code postal">
            </div>
            <div class="form-group">
                <label for="adresse">Adresse</label>
                <input type="text" name="adresse" class="form-control" id="adresse" value="{{ adresse.libelleAdresse }}" placeholder="Adresse">
            </div>
            <div class="form-group">
            <label>Position actuel :</label>
            </div>
            {% include 'maps/maps_show.html.twig' %}
        </div>
        <div id="bouton">
            <button type="submit" name="id" class="btn btn-success mt-3" value="{{ adresse.idAdresse }}">Sauvegarder</button>
            <a href="/admin/adresses" class="btn btn-danger mt-3">Retour</a>
        </div>
            
        </form>
    </section>
    </main>
{% endblock %}
