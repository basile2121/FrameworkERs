{% extends "base.html.twig" %}

{% block title %}Créer un évenement{% endblock %}


{% block content %}
    <h1 class="display-1 text-center mt-5">Créer un évenement</h1>
    <main>
        <form class="form-admin" method="POST" action="/bde/add/evenements">
            <div class="form-group">
                <label for="evenementTitle">Titre</label>
                <input type="text" maxlength="255" name="evenementTitle" class="form-control" id="evenementTitle" placeholder="Titre" required>
            </div>
            <div class="form-group">
                <label for="evenementSubTitle">Sous titre</label>
                <input type="text" maxlength="255" name="evenementSubTitle" class="form-control" id="evenementSubTitle" placeholder="Sous titre" required>
            </div>
            <div class="form-group">
                <label for="evenementDate">Date de l'événement</label>
                <input type="datetime-local" name="evenementDate" class="form-control" id="evenementDate" placeholder="Date de l'événement" required>
            </div>
            <div class="form-group">
                <label for="nbParticipantMax">Nombre de participant max</label>
                <input type="number" maxlength="255" name="nbParticipantMax" class="form-control" id="nbParticipantMax" placeholder="Nombre de participants max" required>
            </div>
            <div class="form-group">
                <label for="prix">Prix</label>
                <input type="number" step="0.01" maxlength="255" class="form-control" id="prix" placeholder="Prix" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" maxlength="40000" class="form-control" id="description" placeholder="Description" required></textarea>
            </div>
            <div class="form-group">
                <label for="categorieSelect">Categorie</label>
                <select name="categorieSelect" id="categorieSelect">
                    <option disabled selected>Selectioner une categorie</option>
                    {% for categorie in categories %}
                        <option value="{{ categorie.idCategorie }}">{{ categorie.libelleCategorie }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="statutSelect">Statut</label>
                <select name="statutSelect" id="statutSelect">
                    <option disabled selected>Selectioner un statut</option>
                    {% for statut in statuts %}
                        <option value="{{ statut.idStatut }}">{{ statut.libelleStatut }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="adresseSelect">Adresse</label>
                <select name="adresseSelect" id="adresseSelect">
                    <option disabled selected>Selectioner une adresse</option>
                    {% for adresse in adresses %}
                        <option value="{{ adresse.idAdresse }}">{{ adresse.cpVille }} {{ adresse.villeLibelle }} {{ adresse.libelleAdresse }}</option>
                    {% endfor %}
                </select>
                <a href="/admin/create/adresse">Ajouter une adresse</a>
            </div>
            <button type="submit" name="id" class="btn btn-primary">Sauvegarder</button>
            <a href="/bde/evenements" class="btn btn-primary">Annuler</a>
        </form>
    </main>
{% endblock %}
